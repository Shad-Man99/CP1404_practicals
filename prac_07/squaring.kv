BoxLayout:
    orientation: 'horizontal'
    TextInput:
        id: input_number
        text: '7'
        font_size: 48
        multiline: False
        color: (238,18,137)
    Button:
        text: 'Square'
        # the following line specifies the function in the app class to call when the button is pressed
        on_press: app.handle_calculate(input_number.text)
    Label:
        id: output_label
        font_size: 48
        color: (238,18,137)
    Label:
        text_size: self.size
        align: 'centre'
        size_hint_y: 0.1
        text: 'Enter a number and press "Square"'