BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            multiline: False
            color: (1, 1, 0, 1)
        BoxLayout:
            orientation: 'vertical'
        Button:
            text: 'Miles to Kilometers'
            on_press: app.handle_calculate(input_number.text)
        Label:
            id: output_label
            font_size: 48
            color: (1, 1, 0, 1)